<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.hostel.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.hostel.controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>list_staff</servlet-name>
        <jsp-file>/views/staff/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/views/user/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ApplicationFormPage</servlet-name>
        <servlet-class>com.hostel.controller.ApplicationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>com.hostel.controller.StudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>list_student</servlet-name>
        <jsp-file>/views/student/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>checkstatus</servlet-name>
        <servlet-class>com.hostel.controller.CheckController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>list_college</servlet-name>
        <jsp-file>/views/college/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CollegeController</servlet-name>
        <servlet-class>com.hostel.controller.CollegeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/views/user/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/views/staff/manageuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>list_staff</servlet-name>
        <url-pattern>/views/staff/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/views/user/loginuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationFormPage</servlet-name>
        <url-pattern>/views/form/application</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/views/student/managestudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>list_student</servlet-name>
        <url-pattern>/views/student/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkstatus</servlet-name>
        <url-pattern>/views/form/checkmatric</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>list_college</servlet-name>
        <url-pattern>/views/college/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CollegeController</servlet-name>
        <url-pattern>/views/college/managecollege</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/views/error.jsp</location>
    </error-page>
</web-app>
